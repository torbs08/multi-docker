{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "torbs08/multi-client",
      "hostname": "client",
      "essential": false
    },
    {
      "name": "server",
      "image": "torbs08/multi-server",
      "hostname": "api",
      "essential": false
    },
    {
      "name": "worker",
      "image": "torbs08/multi-worker",
      "hostname": "worker",
      "essential": false
    },
    {
      "name": "nginx",
      "image": "torbs08/multi-nginx",
      "hostname": "nginx",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        } 
       ],
       "links": ["client", "server"]
     }
  ]
}
